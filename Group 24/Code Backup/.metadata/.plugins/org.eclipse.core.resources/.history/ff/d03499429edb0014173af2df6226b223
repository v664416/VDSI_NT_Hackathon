    <div class="form-group">
      <input type="text" list="qres" onkeyup="{getRes()}" class="form-control" name="q" ng-model="serach" id="q" placeholder="Search Library">
    </div>
    <div class="checkbox">
	  <label><input type="checkbox" value="" ng-model="pageshow">PageResult</label>
